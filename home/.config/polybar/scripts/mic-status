#!/bin/bash

MUTED="$(pamixer --default-source --get-mute)"
LED_NOT_FOUND="brightnessctl --device='platform::micmute' | grep 'not found'"

if [[ $MUTED == "false" ]]; then
    if [[ ! $LED_NOT_FOUND ]]; then
        brightnessctl --device='platform::micmute' set 0 >/dev/null
    fi
    echo "%{F#20c418}%{F-}"
else
    if [[ ! $LED_NOT_FOUND ]]; then
        brightnessctl --device='platform::micmute' set 1 >/dev/null
    fi
    echo "%{F#f53636}%{F-}"
fi
