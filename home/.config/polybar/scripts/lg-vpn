#!/bin/bash

case "$1" in
    --connect)
        nmcli c up LG
        ;;
    --disconnect)
        nmcli c down LG
        ;;
    *)
        active=$(nmcli con show --active | grep -i LG | wc -l)
        if [[ "${active}" = "1" ]]; then
            echo "ðŸ”’ %{F#20c418}LG%{F-}"
        else
            echo "ðŸ”“ LG"
        fi
        ;;
esac
