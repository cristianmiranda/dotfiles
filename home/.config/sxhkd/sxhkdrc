    ~/bin/open-rofi calc ~/.config/rofi/launchers/text/calc.rasi
super + shift + j
	~/bin/open-rofi jira ~/.config/rofi/launchers/text/text.rasi
super + shift + p
    ~/.config/rofi/powermenu/powermenu.sh

