    $HOME/bin/wm --go-to-by-class Discord
super + e
    $HOME/bin/wm --go-to-by-class FirefoxDeveloperEdition$
super + f
    $HOME/bin/wm --go-to-by-class Firefox$
super + g
    $HOME/bin/wm --go-to-by-class GitKraken
super + i
    $HOME/bin/wm --go-to-by-class idea
super + j
    $HOME/bin/wm --go-to-by-class jitsi
super + m
    $HOME/bin/wm --go-to-by-class thunderbird
super + n
    $HOME/bin/wm --go-to-by-class notion-app
super + p
    $HOME/bin/wm --go-to-by-class pycharm
super + o
    $HOME/bin/wm --go-to-by-class webstorm
super + r
    $HOME/bin/wm --go-to-by-class element
super + s
    $HOME/bin/wm --go-to-by-class spotify
super + t
    $HOME/bin/wm --go-to-by-class telegram
super + w
