# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# set modifier
set $super Mod4
set $alt Mod1
set $mod Mod4

# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

#
# Autostart
#
exec --no-startup-id set-display laptop
exec --no-startup-id bluetoothctl power on

exec_always --no-startup-id nm-applet
exec_always --no-startup-id "killall copyq || true; sleep 2; copyq"
exec_always --no-startup-id "killall pasystray || true; sleep 2; pasystray"
exec_always --no-startup-id "killall optimus-manager-qt || true; sleep 2; optimus-manager-qt"
# exec_always --no-startup-id ~/bin/set-random-wallpaper ~/wallpapers/single/artistic2
exec_always --no-startup-id ~/bin/set-wallpaper ~/wallpapers/single/astronaut.jpg
exec_always --no-startup-id xfce4-power-manager
exec_always --no-startup-id blueman-applet
exec_always --no-startup-id crontab ~/.crontab
exec_always --no-startup-id "if [[ $(hostname) != 'virt-manager' ]]; then picom -b --experimental-backends; fi"
exec_always --no-startup-id ff-theme-util
exec_always --no-startup-id docker
exec_always --no-startup-id xset -b
exec_always --no-startup-id brightnessctl --device='tpacpi::kbd_backlight' set 1
exec_always --no-startup-id libinput-gestures-setup stop && libinput-gestures-setup start
exec_always --no-startup-id ~/.config/i3/scripts/autoname_workspaces.py --norenumber_workspaces --icon_list_format mathematician &
exec_always --no-startup-id ~/.config/i3/scripts/alternating_layouts.py &
exec_always --no-startup-id alttab -d 1 -w 1 -i 100x100 -t 100x100 -bg "#002B36" -frame "#16a085" -s 2
exec_always --no-startup-id "killall xautolock || true; sleep 2; xautolock -time 15 -corners 00+0 -cornerdelay 1 -cornerredelay 10 -locker 'xset dpms force off' -notify 5 -notifier '$HOME/bin/lock-screen'"
exec_always --no-startup-id xsettingsd
exec_always --no-startup-id "killall insync || true; QT_AUTO_SCREEN_SCALE_FACTOR=1 insync start"
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

#
# Terminal
#
bindsym $super+Return exec --no-startup-id terminator

#
# Rofi
#
bindsym $super+space exec --no-startup-id $HOME/bin/open-rofi

#
# Screenshots
#
bindsym $super+Shift+2 exec --no-startup-id "flameshot gui -r > /tmp/clipboard.png && ~/bin/imgur /tmp/clipboard.png && dunstify 'Screenshot uploaded to imgur'"
bindsym $super+Shift+3 exec --no-startup-id flameshot full -p "/home/cmiranda/Pictures/Screenshots"
bindsym $super+Shift+4 exec --no-startup-id flameshot gui -p "/home/cmiranda/Pictures/Screenshots"
bindsym $super+Shift+5 exec --no-startup-id peek

#
# VPN
#
bindsym Shift+F8 exec --no-startup-id nmcli c up LG

#
# Music control - See ~/.xbindkeysrc for more keybindings
#
bindsym Shift+F10 exec --no-startup-id $HOME/bin/sp prev
bindsym Shift+F11 exec --no-startup-id $HOME/bin/sp next
bindsym Shift+F12 exec --no-startup-id $HOME/bin/sp play

#
# Kill focused window
#
bindsym $super+q kill
bindsym Control+q kill

#
# Change focus
#
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

#
# Move focused window
#
bindsym $super+Shift+Left move left
bindsym $super+Shift+Down move down
bindsym $super+Shift+Up move up
bindsym $super+Shift+Right move right

#
# Move entire focused workspace to left/right output
#
bindsym Control+$alt+Left move workspace to output left
bindsym Control+$alt+Right move workspace to output right

#
# Change split layout of current container 
#
bindsym $super+h split h
bindsym $super+v split v

#
# Toggle tiling / floating
#
bindsym $super+Shift+space floating toggle

#
# Switch to workspace
#
bindsym $super+$alt+Right workspace next
bindsym $super+$alt+Left workspace prev
bindsym $super+1 workspace number 1
bindsym $super+2 workspace number 2
bindsym $super+3 workspace number 3
bindsym $super+4 workspace number 4
bindsym $super+5 workspace number 5
bindsym $super+6 workspace number 6
bindsym $super+7 workspace number 7
bindsym $super+8 workspace number 8
bindsym $super+9 workspace number 9
bindsym $super+0 workspace number 10
bindsym $super+$alt+1 workspace number 11
bindsym $super+$alt+2 workspace number 12
bindsym $super+$alt+3 workspace number 13
bindsym $super+$alt+4 workspace number 14
bindsym $super+$alt+5 workspace number 15
bindsym $super+$alt+6 workspace number 16
bindsym $super+$alt+7 workspace number 17
bindsym $super+$alt+8 workspace number 18
bindsym $super+$alt+9 workspace number 19
bindsym $super+$alt+0 workspace number 20

#
# Alt + Tab
#
#bindsym Control+Tab workspace back_and_forth
bindsym $mod+Tab workspace back_and_forth

###########
## MODES ##
###########

mode "resize" {
        bindsym Left    resize shrink width 5 px or 5 ppt
        bindsym Down    resize grow height 5 px or 5 ppt
        bindsym Up      resize shrink height 5 px or 5 ppt
        bindsym Right   resize grow width 5 px or 5 ppt
        
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "swap-with-workspace" {
        bindsym 1 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 1; mode "default"
        bindsym 2 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 2; mode "default"
        bindsym 3 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 3; mode "default"
        bindsym 4 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 4; mode "default"
        bindsym 5 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 5; mode "default"
        bindsym 6 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 6; mode "default"
        bindsym 7 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 7; mode "default"
        bindsym 8 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 8; mode "default"
        bindsym 9 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 9; mode "default"
        bindsym 0 exec --no-startup-id ~/.config/i3/scripts/renumber_workspace.py 10; mode "default"
        
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "move-to-workspace" {
        bindsym 1 move container to workspace number 1; mode "default"
        bindsym 2 move container to workspace number 2; mode "default"
        bindsym 3 move container to workspace number 3; mode "default"
        bindsym 4 move container to workspace number 4; mode "default"
        bindsym 5 move container to workspace number 5; mode "default"
        bindsym 6 move container to workspace number 6; mode "default"
        bindsym 7 move container to workspace number 7; mode "default"
        bindsym 8 move container to workspace number 8; mode "default"
        bindsym 9 move container to workspace number 9; mode "default"
        bindsym 0 move container to workspace number 10; mode "default"
                
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "init-workspace" {
        bindsym 1 exec --no-startup-id init-workspace 1
        bindsym 2 exec --no-startup-id init-workspace 2
        bindsym 3 exec --no-startup-id init-workspace 3
        bindsym 4 exec --no-startup-id init-workspace 4
        bindsym 5 exec --no-startup-id init-workspace 5
        bindsym 6 exec --no-startup-id init-workspace 6
        bindsym 7 exec --no-startup-id init-workspace 7
        bindsym 8 exec --no-startup-id init-workspace 8
        bindsym 9 exec --no-startup-id init-workspace 9
        bindsym 0 exec --no-startup-id init-workspace 10

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "set-display" {
        bindsym a exec --no-startup-id /home/cmiranda/bin/set-display single-inverted; mode "default"
        bindsym s exec --no-startup-id /home/cmiranda/bin/set-display single; mode "default"
        bindsym d exec --no-startup-id /home/cmiranda/bin/set-display dual; mode "default"
        bindsym f exec --no-startup-id /home/cmiranda/bin/set-display dual-inverted; mode "default"
        bindsym l exec --no-startup-id /home/cmiranda/bin/set-display laptop; mode "default"
        bindsym v exec --no-startup-id /home/cmiranda/bin/set-display virtual; mode "default"
        bindsym i exec --no-startup-id xcalib -a -i; mode "default"

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "i3-command" {
        bindsym f fullscreen toggle; mode "default"
        bindsym s layout toggle split; mode "default"
        bindsym q exec --no-startup-id "i3-nagbar -t warning -m 'Really, exit?' -b 'Yes' 'i3-msg exit'"; mode "default"
        bindsym d exec --no-startup-id bash ~/dotfiles/scripts/sync.sh && i3-msg restart; mode "default"
        bindsym r restart
        bindsym l exec --no-startup-id /home/cmiranda/bin/lock-screen; mode "default"

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "airpods" {
        bindsym c exec --no-startup-id /home/cmiranda/bin/airpods connect; mode "default"
        bindsym d exec --no-startup-id /home/cmiranda/bin/airpods disconnect; mode "default"
        bindsym s exec --no-startup-id /home/cmiranda/bin/airpods speaker; mode "default"
        bindsym h exec --no-startup-id /home/cmiranda/bin/airpods headset; mode "default"
        bindsym r exec --no-startup-id /home/cmiranda/bin/restart-audio; mode "default"
        
        bindsym Escape  mode "default"
        bindsym Return  mode "default"
}

mode "gaps" {
        bindsym Down	gaps outer current plus 5
        bindsym Left    gaps outer current plus 5
        bindsym Right   gaps outer current minus 5
        bindsym Up      gaps outer current minus 5
        
        bindsym Escape  mode "default"
        bindsym Return  mode "default"
}

mode "launch" {
        bindsym c exec --no-startup-id terminator --command 'python'; mode "default"
        bindsym d exec --no-startup-id discord; mode "default"
        bindsym e exec --no-startup-id /usr/local/firefox_dev/firefox; mode "default"
        bindsym f exec --no-startup-id firefox; mode "default"
        bindsym g exec --no-startup-id gitkraken && i3-msg '[class="(?i)GitKraken"] focus'; mode "default"
        bindsym i exec --no-startup-id intellij-idea-ultimate; mode "default"
        bindsym j exec --no-startup-id /usr/local/jitsi-meet/jitsi-meet; mode "default"
        bindsym m exec --no-startup-id thunderbird; mode "default"
        bindsym p exec --no-startup-id $HOME/bin/dpi-open thunar; mode "default"
        bindsym s exec --no-startup-id spotify; mode "default"
        bindsym t exec --no-startup-id telegram-desktop; mode "default"
        bindsym w exec --no-startup-id walc; mode "default"
        
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "radio-station" {
        bindsym 0 exec --no-startup-id ~/bin/radio off; mode "default"
        bindsym 1 exec --no-startup-id ~/bin/radio 100.7; mode "default"
        bindsym 2 exec --no-startup-id ~/bin/radio 102.3; mode "default"
        bindsym 3 exec --no-startup-id ~/bin/radio 104.3; mode "default"
        bindsym 4 exec --no-startup-id ~/bin/radio 105.5; mode "default"
        
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

bindsym $super+c exec --no-startup-id i3-msg '[class="(?i)Code"] focus'
bindsym $super+d exec --no-startup-id i3-msg '[class="(?i)Discord"] focus'
bindsym $super+e exec --no-startup-id i3-msg '[class="firefoxdeveloperedition$"] focus'
bindsym $super+f exec --no-startup-id i3-msg '[class="firefox$"] focus'
bindsym $super+g exec --no-startup-id i3-msg '[class="(?i)GitKraken"] focus'
bindsym $super+i exec --no-startup-id i3-msg '[class="(?i)idea"] focus'
bindsym $super+j exec --no-startup-id i3-msg '[class="(?i)jitsi"] focus'
bindsym $super+m exec --no-startup-id i3-msg '[class="(?i)thunderbird"] focus'
bindsym $super+p exec --no-startup-id i3-msg '[class="(?i)pycharm"] focus'
bindsym $super+o exec --no-startup-id i3-msg '[class="(?i)webstorm"] focus'
bindsym $super+r exec --no-startup-id i3-msg '[class="(?i)element"] focus'
bindsym $super+s exec --no-startup-id i3-msg '[class="(?i)spotify"] focus'
bindsym $super+t exec --no-startup-id i3-msg '[class="(?i)telegram"] focus'
bindsym $super+w exec --no-startup-id i3-msg '[class="(?i)whatsapp"] focus'

bindsym $super+Shift+a mode "airpods"
bindsym $super+Shift+d mode "set-display"
bindsym $super+Shift+g mode "gaps"
bindsym $super+Shift+i mode "init-workspace"
bindsym $super+Shift+l mode "launch"
bindsym $super+Shift+m mode "move-to-workspace"
bindsym $super+Shift+r mode "resize"
bindsym $super+Shift+s mode "swap-with-workspace"
bindsym $super+Shift+u mode "radio-station"
bindsym $super+Shift+x mode "i3-command"

# Color palette used for the terminal ( ~/.Xresources file )
# Colors are gathered based on the documentation:
# https://i3wm.org/docs/userguide.html#xresources
# Change the variable name at the place you want to match the color
# of your terminal like this:
# [example]
# If you want your bar to have the same background color as your 
# terminal background change the line 362 from:
# background #14191D
# to:
# background $term_background
# Same logic applied to everything else.
set_from_resource $term_background background
set_from_resource $term_foreground foreground
set_from_resource $term_color0     color0
set_from_resource $term_color1     color1
set_from_resource $term_color2     color2
set_from_resource $term_color3     color3
set_from_resource $term_color4     color4
set_from_resource $term_color5     color5
set_from_resource $term_color6     color6
set_from_resource $term_color7     color7
set_from_resource $term_color8     color8
set_from_resource $term_color9     color9
set_from_resource $term_color10    color10
set_from_resource $term_color11    color11
set_from_resource $term_color12    color12
set_from_resource $term_color13    color13
set_from_resource $term_color14    color14
set_from_resource $term_color15    color15

bar {
	i3bar_command i3bar
	status_command i3blocks
	position top

	# Set your primary output first. Example: 'xrandr --output eDP1 --primary'
	tray_output primary
	# tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
	font pango:FiraCode Nerd Font Mono Regular 10.5
	strip_workspace_numbers yes

        colors {
                background #222D31
                statusline #F9FAF9
                separator  #454947

#                                  border  backgr  text
                focused_workspace  #F9FAF9 #1793D1 #1C1C1C
                active_workspace   #595B5B #353836 #FDF6E3
                inactive_workspace #595B5B #222D31 #EEE8D5
                binding_mode       #16a085 #2C2C2C #F9FAF9
                urgent_workspace   #595B5B #FDF6E3 #E5201D
        }
}

# hide/unhide i3status bar
bindsym $super+b bar mode toggle

