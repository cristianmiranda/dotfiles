mode "vpn" {
        bindsym c exec --no-startup-id alacritty --class i3FloatingWindow -e ~/bin/vpn --connect CCA; mode "default"
        bindsym h exec --no-startup-id alacritty --class i3FloatingWindow -e ~/bin/vpn --connect Home; mode "default"
        bindsym l exec --no-startup-id alacritty --class i3FloatingWindow -e ~/bin/vpn --connect LG; mode "default"
        bindsym d exec --no-startup-id alacritty --class i3FloatingWindow -e ~/bin/vpn --disconnect; mode "default"

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

mode "tmux" {
        bindsym i exec --no-startup-id $HOME/bin/tmu --init; mode "default"
        bindsym k exec --no-startup-id $HOME/bin/tmu --kill; mode "default"
        bindsym r exec --no-startup-id $HOME/bin/tmu --restart; mode "default"

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

