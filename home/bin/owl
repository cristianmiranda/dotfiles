#!/bin/bash

set -e

echo "ðŸ¦‰ Owl!"

unameOut="$(uname -s)"
case "${unameOut}" in
    Linux*)     machine=Linux;;
    Darwin*)    machine=Mac;;
    *)          machine="UNKNOWN:${unameOut}" && exit 1
esac

detect_machine() {
    if [[ $machine == "Mac" ]]; then
        echo ">> macOS machine detected"
        mac_actions
    elif [[ $machine == "Linux" ]]; then
        echo ">> Linux machine detected"
        linux_actions
    else
        echo ">> Unsupported machine detected"
        exit 1
    fi
}

mac_actions() {
    MAX_X=3024
    MAX_Y=1964

    while true; do
        X=$((RANDOM % $MAX_X))
        Y=$((RANDOM % $MAX_Y))
        SLEEP_TIME_IN_SECONDS=$((1 + RANDOM % 10))

        echo "Moving mouse to $X, $Y"
        cliclick m:$X,$Y

        echo "Sleeping for $SLEEP_TIME_IN_SECONDS seconds"
        sleep $SLEEP_TIME_IN_SECONDS
    done
}

linux_actions() {
    MAX_X=$(xrandr | grep '*' | awk '{print $1}' | cut -d 'x' -f1 | head -n1)
    MAX_Y=$(xrandr | grep '*' | awk '{print $1}' | cut -d 'x' -f2 | head -n1)

    while true; do
        X=$((RANDOM % $MAX_X))
        Y=$((RANDOM % $MAX_Y))
        SLEEP_TIME_IN_SECONDS=$((1 + RANDOM % 10))

        echo "Moving mouse to $X, $Y"
        xdotool mousemove $X $Y

        echo "Sleeping for $SLEEP_TIME_IN_SECONDS seconds"
        sleep $SLEEP_TIME_IN_SECONDS
    done
}

detect_machine
