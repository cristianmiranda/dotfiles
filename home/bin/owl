#!/bin/bash

set -e

echo "ðŸ¦‰ Owl!"

unameOut="$(uname -s)"
case "${unameOut}" in
    Linux*)     machine=Linux;;
    Darwin*)    machine=Mac;;
    *)          machine="UNKNOWN:${unameOut}" && exit 1
esac

if [[ $machine == "Mac" ]]; then
    echo ">> macOS machine detected"
    while true; do
        cliclick m:0,0
        sleep 1
        cliclick m:224,65
        sleep 1
        cliclick m:844,286
        sleep 1
        cliclick m:133,804
        sleep 1
    done
elif [[ $machine == "Linux" ]]; then
    echo ">> Linux machine detected"
    while true; do
        xdotool mousemove 100 200
        sleep 1
        xdotool mousemove 2400 200
        sleep 1
        xdotool mousemove 100 1200
        sleep 1
        xdotool mousemove 2400 1200
        sleep 1
    done
fi
