#!/bin/bash

MODE=$1 # on/off

#
# $ pactl list sink-inputs
#
#   ... application.name   =
#   ... device.description =
#   ... media.name         =
#

APPS=(
    "element"
    "telegram-desktop"
    "whatsapp-for-linux"
)

if [ "$MODE" == "on" ]; then
    MODE="mute"
    dunstctl set-paused true 2>/dev/null
else
    MODE="unmute"
    dunstctl set-paused false 2>/dev/null
fi

for APP in "${APPS[@]}"; do
    $HOME/bin/toggle-app-audio $APP $MODE
done
