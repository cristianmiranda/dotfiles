#!/usr/bin/env bash

MONITOR_RESOLUTION=`~/bin/get-resolution`

if [[ "$MONITOR_RESOLUTION" == "2K" ]]; then
    $1
elif [[ "$MONITOR_RESOLUTION" == "4K" ]]; then
    if [[ $1 == "spotify" ]]; then
        spotify --force-device-scale-factor=2
    else
        GDK_DPI_SCALE=0.5 GDK_SCALE=2 $1
    fi
else
    $1
fi
