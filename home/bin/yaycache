#!/bin/bash

yay_cache=`find $(yay -Pg | jq -r .buildDir) -maxdepth 1 -type d | awk '{ print "-c " $1 }' | tail -n +2`

echo -e "\nğŸ§ [pacman] Looking for prunable installed packages..."
paccache -rvk2
echo -e "\nğŸ§ [pacman] Looking for prunable uninstalled packages..."
paccache -ruvk0
echo -e "\nğŸ§ [yay] Looking for prunable installed packages..."
paccache -rvk0 $yay_cache
echo -e "\nğŸ§ [yay] Looking for prunable uninstalled packages..."
paccache -ruvk2 $yay_cache

