#!/usr/bin/env bash

CURRENT_URL_HANDLER_FILENAME="/tmp/current-url-handler"

case "$1" in
    firefox|firefox-developer-edition|brave)
        echo $1 > $CURRENT_URL_HANDLER_FILENAME
        ;;
    adaptative)
        rm $CURRENT_URL_HANDLER_FILENAME
        ;;
    *)
        echo "Unkown value: $1"
        exit 1
        ;;
esac
