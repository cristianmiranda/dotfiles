# Enable scrollback buffer
defscrollback 10000

# Enable mouse scrolling (terminal must support it)
termcapinfo xterm* ti@:te@

# Copy to system clipboard on selection end (cross-platform)
bindkey -m ' ' eval 'stuff \040' 'writebuf' 'exec sh -c "clipboard-copy < /tmp/screen-exchange"'
bindkey -m Y eval 'stuff Y' 'writebuf' 'exec sh -c "clipboard-copy < /tmp/screen-exchange"'
